{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Debug",
      "type": "shell",
      "command": "cmake -S . -B build_debug -DCMAKE_BUILD_TYPE=Debug"
    },
    {
      "label": "Generate Release",
      "type": "shell",
      "command": "cmake -S . -B build_release -DCMAKE_BUILD_TYPE=Release"
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "cmake --build build_debug",
      "dependsOn": [
        "Generate Debug"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "cmake --build build_release",
      "dependsOn": [
        "Generate Release"
      ]
    },
    {
      "label": "Package Debug",
      "type": "shell",
      "command": "cmake --build build_debug --target package",
      "dependsOn": [
        "Generate Debug"
      ]
    },
    {
      "label": "Package Release",
      "type": "shell",
      "command": "cmake --build build_release --target package",
      "dependsOn": [
        "Generate Release"
      ]
    },
    {
      "label": "Launch",
      "type": "shell",
      "command": "aerman",
      "args": [
        "mdk-launch"
      ],
      "dependsOn": [
        "Build Debug"
      ]
    },
    {
      "label": "Launch Debug",
      "type": "shell",
      "command": "aerman",
      "args": [
        "mdk-debug"
      ],
      "dependsOn": [
        "Build Debug"
      ]
    },
    {
      "label": "Launch Debug Server",
      "type": "shell",
      "command": "aerman",
      "args": [
        "mdk-debug-server"
      ],
      "dependsOn": [
        "Build Debug"
      ]
    }
  ]
}